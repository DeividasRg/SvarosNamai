@model ProductPricesViewDto

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Order" asp-action="ProductPrices" method="post">
                <!-- Hidden input field for orderId -->
                <input type="hidden" name="orderId" value="@Model.OrderId" />

                <div class="card shadow border-0 mt-4">
                    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h1 class="text-white">Paslaugos</h1>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row pb-3">
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Paslaugos pavadinimas</th>
                                    <th>Paslaugos kaina</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Lines.Count; i++)
                                {
                                    var line = Model.Lines[i];
                                    <tr>
                                        <td>@line.ProductName</td>
                                        <td>
                                            <div class="input-group">
                                                <input type="number" step="0.01" class="form-control" asp-for="@Model.Lines[i].Price" />
                                                <span class="input-group-addon">€</span>
                                                <input type="hidden" class="form-control" asp-for="@Model.Lines[i].OrderLineId" />
                                                <input type="hidden" class="form-control" asp-for="@Model.Lines[i].OrderId" />
                                                <input type="hidden" class="form-control" asp-for="@Model.Lines[i].ProductName" />
                                            </div>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
