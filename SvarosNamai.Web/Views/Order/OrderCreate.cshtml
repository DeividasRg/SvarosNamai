                    </div>
                </div>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .custom-input {
        background-color: rgba(240, 240, 240, 0.88);
        color: black;
    }

        .custom-input:focus {
            background-color: white;
        }

    select.custom-input option:hover {
        background-color: lightgrey;
    }

    .dropdown-option {
        text-align: center;
        background-color: rgba(240, 240, 240, 0.88);
        color: black;
    }

    .custom-select {
        position: relative;
    }

        .custom-select select {
            width: 400px;
            appearance: none;
            background-color: rgba(240, 240, 240, 0.88);
            color: black;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .custom-select:after {
            content: '\25BC';
            position: absolute;
            top: 14px;
            right: 15px;
            pointer-events: none;
            font-size: 12px;
            color: #555;
        }

    select.custom-input option:hover {
        background-color: lightgrey;
    }

    .custom-width {
        width: 400px;
    }
</style>
