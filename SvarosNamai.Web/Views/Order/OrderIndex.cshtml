@model IEnumerable<OrderDto>


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Užsakymų sąrašas</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>

		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Užsakymo numeris
					</th>
					<th>
						Adresas
					</th>
					<th>
						Laikas
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var order in Model)
				{
				<tr>
					<td> @order.OrderId
					</td>
						<td>
							@order.Street @order.HouseNo@(order.HouseLetter != null ? order.HouseLetter : "") @(order.ApartmentNo != null ? order.ApartmentNo : ""), @order.City
					</td>
					<td> @order.Date, @order.Hour
					</td>
						<td>
							@order.Status
						</td>
					<td>
						<a class="btn btn-danger">
							<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
				}

			</tbody>
		</table>

	</div>

</div>